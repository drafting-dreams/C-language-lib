#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#include <string.h>
char ch[200][200];
int n, m;

int a[200][200];

int main()
{
	void digui(int x, int y, int k, char ch[200][200], int a[200][200], int m, int n);
	while (scanf("%d %d", &n, &m) != EOF) {
		memset(a, 0, sizeof(a));
		int k = 0;
		for (int i = 0; i < n; i++) //输入图案
				scanf("%s", &ch[i]);
		for (int i = 0; i < n; i++) {
			for (int j = 0; j < m; j++) {
				if (ch[i][j] == '#' && !a[i][j])
					k++;
					digui(i, j, k, ch, a, m, n);
			}
		}
		printf("%d\n", k);
	}
	return 0;
}
void digui(int x,int y,int k,char ch[200][200],int a[200][200],int m,int n) {
	
	if (ch[x][y] == '#') {
		a[x][y] = k;
		if (x - 1 >= 0 && y - 1 >= 0 && !a[x - 1][y - 1])digui(x - 1, y - 1, k, ch, a, m, n);
		if (x - 2 >= 0 && !a[x - 2][y])digui(x - 2, y, k, ch, a, m, n);
		if (x - 1 >= 0 && !a[x - 1][y])digui(x - 1, y, k, ch, a, m, n);
		if (y - 2 >= 0 && !a[x][y - 2])digui(x, y - 2, k, ch, a, m, n);
		if (y - 1 >= 0 && !a[x][y - 1])digui(x, y - 1, k, ch, a, m, n);
		if (x + 1 <= n && y + 1 <= m && !a[x + 1][y + 1])digui(x + 1, y + 1, k, ch, a, m, n);
		if (x + 2 <= n && !a[x + 2][y])digui(x + 2, y, k, ch, a, m, n);
		if (x + 1 <= n && !a[x + 1][y])digui(x + 1, y, k, ch, a, m, n);
		if (y + 2 <= m && !a[x][y + 2])digui(x, y + 2, k, ch, a, m, n);
		if (y + 1 <= m && !a[x][y + 1])digui(x, y + 1, k, ch, a, m, n);
		if (x - 1 >= 0 && y + 1 <= m && !a[x - 1][y + 1])digui(x - 1, y + 1, k, ch, a, m, n);
		if (x + 1 <= n && y - 1 >= 0 && !a[x + 1][y - 1])digui(x + 1, y - 1, k, ch, a, m, n);
	}
	return;
}
